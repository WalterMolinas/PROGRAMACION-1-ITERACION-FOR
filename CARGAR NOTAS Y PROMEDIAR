#include <stdio.h>
//Crear un programa que solicite al usuario la cantidad de notas que ingresar√° y permita su carga y al finalizar la carga muestre el promedio. 
int main() {
	float cantnotas;
	float promedio,sumatoria,nota;
	int i;
	printf("Ingrese la cantidad de notas que desaea promediar: \n",cantnotas);
	scanf("%f", &cantnotas);
	sumatoria=0;
	for (i=1;i<=cantnotas;i++){
		printf("Ingrese la nota: %d de 1-10\n",i);
		scanf("%f", &nota);
		sumatoria=sumatoria+nota;
	}
	promedio=sumatoria/cantnotas;
	printf("El promedio sera de: %.2f",promedio);
	return 0;
}
